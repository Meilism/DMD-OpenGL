{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g", "-Wall", "-std=c++17",
                "-I./include", "-L./lib",
                "${file}",
                "-o", "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lglfw3", "-lglad", "-lgdi32" // Link to libraries
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}